<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="wrap_content"
    xmlns:card_view="http://schemas.android.com/tools"
    android:layout_marginTop="@dimen/_5sdp"
    android:layout_marginLeft="@dimen/_2sdp"
    android:layout_marginRight="@dimen/_1sdp"
    android:layout_marginBottom="@dimen/_1sdp"
    android:background="@drawable/rectcart"
    android:elevation="@dimen/_1sdp"
    android:padding="@dimen/_5sdp"
    android:backgroundTint="@color/white"
    android:id="@+id/headerContent">


    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:singleLine="true"
        android:textSize="16dp"
        android:layout_marginRight="@dimen/_35sdp"
        android:layout_marginLeft="@dimen/_2sdp"
        android:id="@+id/title"
        android:paddingLeft="@dimen/_8sdp"
        android:paddingTop="@dimen/_2sdp"
        android:paddingBottom="@dimen/_2sdp"
        android:paddingRight="@dimen/_5sdp"
         android:layout_marginTop="@dimen/_2sdp"
        android:text="gd g g gdg dg dgg   gg d gd gdg d gdgg   ggdgd gdgdg dgg   g"
        android:textColor="#7A7A7A" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rc_subcat"
         android:layout_marginBottom="@dimen/_1sdp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/_12sdp"
        android:layout_below="@+id/title"
        android:scrollbars="vertical" />


    <ImageView
        android:layout_width="@dimen/_25sdp"
        android:layout_alignParentRight="true"
        android:padding="@dimen/_2sdp"
        android:id="@+id/imagegetsub"
        android:layout_marginRight="@dimen/_10sdp"
         android:src="@drawable/ic_baseline_keyboard_arrow_down_24"
        android:layout_height="@dimen/_25sdp"/>

    <!--ic_baseline_add_circle_24-->

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="10dp"
        android:visibility="gone"
        android:layout_marginRight="@dimen/_4sdp"
        android:layout_marginBottom="@dimen/_2sdp"
        android:layout_marginLeft="@dimen/_4sdp"
        android:id="@+id/description"
        android:layout_marginTop="@dimen/_2sdp"
        android:text="ddddddddddddddddddkkkkdddddddddddddddddddddddddddddddddddddddddddgd g"
        android:textColor="@color/grey_dot" />


</RelativeLayout>